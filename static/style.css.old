body {
	margin: 0;
	padding: 0 8px;
	box-sizing: border-box;
	width: 100%;
	font-family: georgia, "times new roman", serif;
}
.container {
	padding-left: 8px;
	padding-right: 8px;
	box-sizing: border-box;
}
h1 {
	cursor: pointer;
}
h1 > a {
	text-decoration: none;
	color: #212121;
}
.title {
	margin-top: 0;
	cursor: pointer;
}
.title > a {
	text-decoration: none;
	color: rgba(0, 0, 0, 1);
}
.title > a:visited {
	/*color: #9e9e9e;*/
}
.title > a:hover, .title > a:active {
	text-decoration: underline;
}
.source, .date {
	font-family: sans-serif;
	font-size: 14px;
	color: rgba(0, 0, 0, 0.6);
}
.article {
	margin-bottom: 24px;
}
.article p {
	max-width: 748px;
	line-height: 27.2px;
	font-size: 17px;
	font-family: georgia, 'times new roman', times, serif;
	color: rgba(0, 0, 0, 0.9);
	text-align: left;
}
.scrollTop {
	cursor: pointer;
	text-transform: uppercase;
	text-decoration: underline;
}

@media only screen and (min-width: 1000px) {
	body { padding-left: 15%; }
}
